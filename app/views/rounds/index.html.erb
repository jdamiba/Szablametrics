<% @rounds.each do |round| %>
  <tr>
    <td><%= round.number %></td>
    <td><%= round.firstgovteam %></td>
    <td><%= round.secondgovteam %></td>
    <td><%= round.firstoppteam %></td>
    <td><%= round.secondoppteam %></td>
    <td><%= round.judge %></td>
    <td><%= round.resolution %></td>
    <td><%= round.pm_spkrpnts %></td>
    <td><%= round.dpm_spkrpnts %></td>
    <td><%= round.lo_spkrpnts %></td>
    <td><%= round.dlo_spkrpnts %></td>
    <td><%= round.mg_spkrpnts %></td>
    <td><%= round.mo_spkrpnts %></td>
    <td><%= round.ow_spkrpnts %></td>
    <td><%= round.gw_spkrpnts %></td>
    <td><%= link_to 'Show', round %></td>
    <td><%= link_to 'Edit', edit_round_path(round) %></td>
    <td><%= link_to 'Destroy', round, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

